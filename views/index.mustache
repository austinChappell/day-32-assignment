<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mugs</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>

    <nav>
      <a href="/"><i class="fa fa-coffee" aria-hidden="true"></i></a>
      <h1><a href="/">Mugs Central</a></h1>
      <a class="add-link" href="/add"><i class="fa fa-plus" aria-hidden="true"></i>
</a>
    </nav>

    <div class="container">

      <div class="all-mugs">

        {{ #mugs }}

        <a href="/show/{{ _id }}">
          <div class="each-mug">
            <h3>{{ name }}</h3>
            <img src="{{ imageURL }}" />
          </div>
        </a>

        {{ /mugs }}

      </div>

    </div>
  </body>
</html>
